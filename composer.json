{
    "name": "enabel/ux",
    "description": "Delightful ux components for Symfony",
    "license": "MIT",
    "type": "symfony-bundle",
    "keywords": [
        "symfony-ux"
    ],
    "authors": [
        {
            "name": "Damien LAGAE",
            "email": "damien.lagae@enabel.be"
        },
        {
            "name": "Gerry VANDERMAESEN",
            "email": "gerry.vandermaesen@enabel.be"
        }
    ],
    "require": {
        "php": ">=8.3",
        "symfony/http-foundation": "^7.3.7",
        "symfony/options-resolver": "^7.3",
        "symfony/ux-icons": "^2.30",
        "symfony/ux-twig-component": "^2.30",
        "twig/intl-extra": "^3.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48",
        "phpunit/phpunit": "^9.6",
        "symfony/framework-bundle": "^7.3",
        "symfony/phpunit-bridge": "^7.3"
    },
    "suggest": {
        "symfony/asset-mapper": "Allows to manage frontend assets more easily."
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Enabel\\Ux\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Enabel\\Ux\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "tools:run": [
            "@tools:run:php-cs-fixer",
            "@tools:run:phpstan"
        ],
        "tools:run:php-cs-fixer": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix",
        "tools:run:phpstan": "tools/phpstan/vendor/bin/phpstan --memory-limit=1G",
        "tools:upgrade": [
            "@tools:upgrade:php-cs-fixer",
            "@tools:upgrade:phpstan"
        ],
        "tools:upgrade:php-cs-fixer": "composer upgrade -W -d tools/php-cs-fixer",
        "tools:upgrade:phpstan": "composer upgrade -W -d tools/phpstan"
    }
}
