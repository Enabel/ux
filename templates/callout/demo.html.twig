<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Callout Component Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Enabel Bootstrap Theme Callout Styles */
        .callout {
            padding: 1.25rem;
            margin: 1rem 0;
            border: 1px solid #dee2e6;
            border-left: 4px solid #007bff;
            border-radius: 0.375rem;
        }
        
        .callout-primary {
            border-left-color: #007bff;
            background-color: rgba(0, 123, 255, 0.1);
        }
        
        .callout-secondary {
            border-left-color: #6c757d;
            background-color: rgba(108, 117, 125, 0.1);
        }
        
        .callout-success {
            border-left-color: #28a745;
            background-color: rgba(40, 167, 69, 0.1);
        }
        
        .callout-danger {
            border-left-color: #dc3545;
            background-color: rgba(220, 53, 69, 0.1);
        }
        
        .callout-warning {
            border-left-color: #ffc107;
            background-color: rgba(255, 193, 7, 0.1);
        }
        
        .callout-info {
            border-left-color: #17a2b8;
            background-color: rgba(23, 162, 184, 0.1);
        }
        
        .callout-light {
            border-left-color: #f8f9fa;
            background-color: rgba(248, 249, 250, 0.5);
        }
        
        .callout-dark {
            border-left-color: #343a40;
            background-color: rgba(52, 58, 64, 0.1);
        }
        
        .callout-sm {
            padding: 0.75rem;
            font-size: 0.875rem;
        }
        
        .callout h5 {
            margin-top: 0;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Callout Component Demo</h1>
        
        <h2>Basic Examples</h2>
        
        {{ component('Enabel:Ux:Callout', {
            message: 'This is a basic info callout.'
        }) }}
        
        {{ component('Enabel:Ux:Callout', {
            type: 'success',
            title: 'Success!',
            message: 'Your operation completed successfully.'
        }) }}
        
        {{ component('Enabel:Ux:Callout', {
            type: 'warning',
            title: 'Warning',
            message: 'Please be careful with this action.'
        }) }}
        
        {{ component('Enabel:Ux:Callout', {
            type: 'danger',
            title: 'Error',
            message: 'Something went wrong.'
        }) }}
        
        <h2>With Icons</h2>
        
        {{ component('Enabel:Ux:Callout', {
            type: 'info',
            title: 'Information',
            message: 'This callout includes an icon for better visual appeal.',
            icon: 'lucide:info'
        }) }}
        
        {{ component('Enabel:Ux:Callout', {
            type: 'success',
            title: 'Well Done!',
            message: 'You have successfully completed the task.',
            icon: 'lucide:check-circle'
        }) }}
        
        <h2>Small Variant</h2>
        
        {{ component('Enabel:Ux:Callout', {
            type: 'primary',
            message: 'This is a small callout for less prominent information.',
            size: 'sm'
        }) }}
        
        <h2>All Types</h2>
        
        {% for type in ['primary', 'secondary', 'success', 'danger', 'warning', 'info', 'light', 'dark'] %}
            {{ component('Enabel:Ux:Callout', {
                type: type,
                title: type|title ~ ' Callout',
                message: 'This is a ' ~ type ~ ' callout example.'
            }) }}
        {% endfor %}
    </div>
</body>
</html>